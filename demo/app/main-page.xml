<Page 
  xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ActionBar title="Filters" />
  <ScrollView>
    <StackLayout>
      <Image id="imageOne" src="~/images/bart.png" height="190" stretch="aspectFit" />
      <StackLayout width="100%" orientation="horizontal">
        <Button class="greenBtn" text="Kaleidoscope" width="40%" tap="{{ effectSharpen }}" />
        <Button class="greenBtn" text="Black White" width="40%" tap="{{ doBlackWhite }}" />
      </StackLayout>
      <Image id="imageTwo" src="~/images/maury.jpg" height="190" stretch="aspectFit" />
      <StackLayout width="100%" orientation="horizontal">
        <Button class="greenBtn" text="Invert" width="40%" tap="{{ effectInvert }}" />
        <Button class="greenBtn" text="Sepia" width="40%" tap="{{ effectSepia }}" />
      </StackLayout>
    </StackLayout>
  </ScrollView>
</Page>